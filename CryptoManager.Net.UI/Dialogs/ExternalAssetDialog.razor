<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            @(Model.Edit ? "Update" : "Add") external asset
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudStack>
            <MudTextField @bind-Value="@Model.Asset" Label="Asset" />
            <MudNumericField HideSpinButtons="true" @bind-Value="@Model.Quantity" Label="Quantity" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton OnClick="Add">@(Model.Edit ? "Save" : "Add")</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public AddExternalAsset Model { get; set; } = new AddExternalAsset();

    private void Cancel() => MudDialog!.Cancel();

    private void Add()
    {
        MudDialog!.Close(DialogResult.Ok(Model));
    }

    public record AddExternalAsset
    {
        public bool Edit { get; set; }
        public string Asset { get; set; } = "";
        public decimal Quantity { get; set; }
    }
}
